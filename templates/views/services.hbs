 var str2 = document.getElementById('{{shop._id}}1').value
 if(!isMatching(str1,str2)){
     document.getElementById('{{shop._id}}').style.display ='none'
 }else
 {
     document.getElementById('{{shop._id}}').style.display ='block'
     
 }
 {{/each}}
</script>
